												<!-- Link Title -->
												<span class="link-title">Sign In</span>
											</a>
										<%end%>
									</li>
								</ul>
							</div><!-- /.navbar-collapse -->
						</nav>
					</div>
				</div>
			</div>
		</div>
	</div>
	<!-- Header End -->
	<%= yield %>
