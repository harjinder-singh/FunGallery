<!DOCTYPE html>
<html>
<head>
  <title>FunGallery</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= stylesheet_link_tag 'bootstrap.min'%>
  <%= stylesheet_link_tag 'animate.min'%>
  <%= stylesheet_link_tag 'prettyPhoto'%>
  <%= stylesheet_link_tag 'font-awesome.min'%>
  <%= stylesheet_link_tag 'style'%>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'jquery' %>
  <%= javascript_include_tag 'bootstrap.min' %>
  <%= javascript_include_tag 'waypoints.min' %>
  <%= javascript_include_tag 'jquery.prettyPhoto' %>
  <%= javascript_include_tag 'html5shiv' %>
  <%= javascript_include_tag 'custom' %>
  <%= javascript_include_tag 'respond.min' %>
  <%= csrf_meta_tags %>
</head>

<body>
	<% if user_signed_in? %>
		<%= current_user.email %>
		<%= link_to 'Sign out', destroy_user_session_path, :method => :delete %>
	<%end%>
<div class="alert_html">
  <% if notice %>
    <div class="alert alert-info alert_top_spacing">
        <button class="close" data-dismiss="alert" type="button">
            &times;
        </button>
        <%= notice %>
    </div>
  <%end %>
  <% if alert %>
    <div class="alert alert-info alert_top_spacing">
        <a class="close" data-dismiss="alert" href='#'>&times;</a>
        <%= simple_format(alert) %>
    </div>
  <%end %>
  <% if flash[:error] %>
    <div class="alert flash_error alert_top_spacing">
      <a class="discard_contacts close" data-dismiss="alert" href='#'>&times;</a>
      <%= simple_format(flash[:error]) %>
    </div>
  <%end %>
</div>
<%= yield %>
	<script type="text/javascript" >
		
		// Type your codde here
	</script>
</body>
</html>
