<!DOCTYPE html>
<html>
<head>
  <title>FunGallery</title>
  <%= stylesheet_link_tag 'application', media: 'all' %>
  <%= javascript_include_tag 'application'%>

  <script src="//cdnjs.cloudflare.com/ajax/libs/jquery-form-validator/2.3.26/jquery.form-validator.min.js"></script>
  <%= csrf_meta_tags %>
</head>

<body>
<div class="alert_html">
  <% if notice %>
    <div class="alert alert-info alert_top_spacing">
        <button class="close" data-dismiss="alert" type="button">
            &times;
        </button>
        <%= notice %>
    </div>
  <%end %>
  <% if alert %>
    <div class="alert alert-info alert_top_spacing">
        <a class="close" data-dismiss="alert" href='#'>&times;</a>
        <%= simple_format(alert) %>
    </div>
  <%end %>
  <% if flash[:error] %>
    <div class="alert alert-info alert_top_spacing">
      <a class="discard_contacts close" data-dismiss="alert" href='#'>&times;</a>
      <%= simple_format(flash[:error]) %>
    </div>
  <%end %>
</div>
<!-- Body Wrapper -->
<div class="wrapper white">

	<!-- Header Start -->
	<div class="header">
		<!-- Header Information -->
		<div class="header-info">
			<div class="container">
				<div class="row">
					<div class="col-md-2 col-sm-2">
						<!-- Social Media -->
						<div class="social">
							<a href="#" class="facebook"><i class="fa fa-facebook"></i></a>
							<a href="#" class="google-plus"><i class="fa fa-google-plus"></i></a>
							<a href="#" class="twitter"><i class="fa fa-twitter"></i></a>
						</div>
					</div>
					<%= form_tag track_order_orders_path do |f| %>
						<div class="col-md-3 col-sm-3">
							<div class="form-group">
								<div class="col-sm-12">
									<div id="imaginary_container"> 
						                <div class="input-group stylish-input-group">
						                    <%= text_field_tag :tracker, nil, class: "form-control", placeholder: "Track order, Enter Order No"%>
						                    <span class="input-group-addon">
						                        <button type="submit">
						                            <span class="fa fa-search"></span>
						                        </button>  
						                    </span>
						                </div>
						            </div>
								</div>
							</div>
						</div>
					<%end%>
					<div class="col-md-3 col-sm-3">
							<!-- Contact Info -->
						<div class="contact-info">
							<span><i class="fa fa-phone br-lblue"></i> <strong>+91 94630-83099</strong></span>
						</div>
					</div>
					<% if user_signed_in?%>
						<div class="col-md-4 col-sm-4">
							<!-- Contact Info -->
							<div class="contact-info">
									<span><strong>Hi, <%= current_user.email%></strong></span>
							</div>
						</div>
					<%else%>
						<div class="col-md-4 col-sm-4">
							<!-- Contact Info -->
							<div class="contact-info">
									<span><strong>Hi, Guest</strong></span>
							</div>
						</div>
					<%end%>
				</div>
			</div>
		</div>
		<!-- Header Navigation -->
