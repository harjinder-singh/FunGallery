<%= form_for @order do |f| %>
	Service Required <%= f.select :service_id, Service.all.map{|service| [ service.name, service.id]}%></br></br>
	Pickup Date <%= f.select :collecting_date, ["17/11/2016","18/11/2016","19/11/2016"]%> </br></br>
	Pickup Time <%= f.select :collecting_time, ["8-9", "9-10"]%> </br></br>
	Delivery Date <%= f.select :delivery_date, ["18/11/2016","19/11/2016","20/11/2016"]%> </br></br>
	Delivery Time <%= f.select :delivery_time, ["8-9", "9-10"]%> </br></br>
	Locality <%= f.select :area, ["sec 15", "sec 16"]%> </br></br>
	Address <%= f.text_area :address%> </br></br>
	<%= f.submit "Submit Order", class:' btn blue pull-right' %>
<%end%>
